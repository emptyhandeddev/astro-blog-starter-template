---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Hooded Horse | Indie Game Publishing">

  <!-- Header -->
  <header class="bg-black/30 backdrop-blur-sm fixed top-0 left-0 right-0 z-50">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
      <!-- Social Icons -->
      <div class="flex items-center space-x-4">
        <!-- Steam -->
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Steam">
          <!-- SVG from your file -->
        </a>
        <!-- Discord -->
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Discord">
          <!-- SVG from your file -->
        </a>
      </div>

      <!-- Logo -->
      <a href="#" class="absolute left-1/2 -translate-x-1/2">
        <img src="https://placehold.co/150x50/0a0a0a/ffffff?text=HOODED+HORSE" alt="Hooded Horse Logo" class="h-8">
      </a>

      <!-- Right section (language + menu) -->
      <div class="flex items-center space-x-4">
        <div class="relative" id="language-selector-container">
          <button id="language-selector-button" class="flex items-center hover:text-white transition-colors text-sm">
            <span>English</span>
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
          <div id="language-dropdown" class="absolute right-0 mt-2 w-40 bg-gray-900 border border-gray-700 rounded-md shadow-lg py-1 hidden"></div>
        </div>
        <button id="mobile-menu-button" class="md:hidden text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
        </button>
      </div>
    </div>
  </header>

  <main>
    <!-- Hero -->
    <section id="home" class="hero-bg min-h-screen flex flex-col justify-center items-center text-center pt-20 px-4">
      <h1 class="text-6xl md:text-8xl text-white font-heading tracking-wider uppercase" data-key="heroTitle">
        Indie Game Publishing
      </h1>
      <p class="text-lg md:text-xl text-gray-300 mt-4 max-w-2xl" data-key="heroSubtitle">
        Hooded Horse is a publisher of games featuring strategic and tactical depth.
      </p>
    </section>

    <!-- Featured Video -->
    <section class="py-16 md:py-24 bg-black">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-4xl text-white font-heading mb-8" data-key="videoTitle">Watch the Hooded Horse Direct!</h2>
        <div class="aspect-w-16 aspect-h-9 max-w-4xl mx-auto">
          <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen class="rounded-lg shadow-2xl"></iframe>
        </div>
      </div>
    </section>

    <!-- Platforms -->
    <!-- Keep your original markup for platforms, screenshots, publisher info, newsletter... -->

  </main>

  <!-- Footer -->
  <footer class="bg-black py-16">
    <!-- Keep your original footer content -->
  </footer>

  <!-- Inline Scripts -->
  <script>
    // Keep the translation script + menu script from your HTML here
  </script>
</BaseLayout>
